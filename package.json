{
  "name": "egg",
  "type": "module",
  "version": "0.0.2",
  "author": "Kim Henry",
  "scripts": {
    "dev": "export FIRESTORE_EMULATOR_HOST='127.0.0.1:8080' && export FIREBASE_AUTH_EMULATOR_HOST='127.0.0.1:9099' && export PROD=false && astro dev",
    "start": "astro dev",
    "build": "export PROD=true && astro build",
    "preview": "export PROD=true && astro preview",
    "astro": "astro",
    "test:firestore": "bun test spec/firestore/*.spec.ts --watch",
    "test:auth": "bun test spec/auth/* --watch",
    "deploy:main": "firebase deploy --only auth firestore hosting",
    "deploy:preview": "firebase hosting:channel:deploy v002 --expires 3d",
    "deploy:rules": "firebase deploy --only firestore:rules"
  },
  "dependencies": {
    "@astrojs/preact": "^4.1.1",
    "@astrojs/starlight": "^0.36.0",
    "@astrojs/starlight-tailwind": "^4.0.1",
    "@fontsource-variable/quicksand": "^5.2.10",
    "@nanostores/preact": "^1.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.14",
    "astro": "^5.14.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fast-glob": "^3.3.3",
    "firebase": "^11.10.0",
    "katex": "^0.16.25",
    "nanostores": "^1.0.1",
    "preact": "^10.27.2",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.32.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.1",
    "@types/bun": "^1.3.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ]
  }
}
