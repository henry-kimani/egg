---
/* Render diffrent buttons depending on theme */
import { LinkButton } from "@astrojs/starlight/components";
import { cn } from "@lib/utils";
import { buttonThemes } from "@lib/themes";
import { type ThemeVariants } from "@lib/themes";
import { type StarlightIcon } from "@astrojs/starlight/types";

interface VariantButton {
  id?: string;
  classes?: string;
  icon: StarlightIcon | undefined;
  theme: ThemeVariants;
  variant: "primary" | "secondary" | "minimal";
  buttonLabel?: string;
  iconLabel?: string;
}

interface Props extends VariantButton {
  href: string;
}

const { href, icon, variant, classes, theme } = Astro.props;
---

<LinkButton
  {href} {icon} {variant}
  class:list={cn([classes], buttonThemes(theme))}
>
  <slot/>
</LinkButton>   


