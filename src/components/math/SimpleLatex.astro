---
import katex from "katex";

interface Props {
  formula: string;
  class: string
};

const { formula = "", class: className } = Astro.props;
const html = katex.renderToString(formula, { throwOnError: true });
---

<div class:list={["text-start text-2xl", className ]}>
  <span set:html={html} class=""></span>
</div>


<link
	rel="stylesheet"
	href="https://cdn.jsdelivr.net/npm/katex@0.15.1/dist/katex.css"
	integrity="sha384-WsHMgfkABRyG494OmuiNmkAOk8nhO1qE+Y6wns6v+EoNoTNxrWxYpl5ZYWFOLPCM"
	crossorigin="anonymous"
/>
