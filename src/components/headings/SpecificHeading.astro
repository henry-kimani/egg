---

interface Props {
  heading: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { heading } = Astro.props;
---

{ heading === "h1" ? <h1><slot /></h1> 
: heading === "h2" ? <h2><slot /></h2> 
: heading === "h3" ? <h3><slot /></h3> 
: heading === "h4" ? <h4><slot /></h4> 
: heading === "h5" ? <h5><slot /></h5> 
: <h6><slot /></h6> }
