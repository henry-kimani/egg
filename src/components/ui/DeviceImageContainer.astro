---
import  type { Props as ImageContainProps } from "@/components/ui/ImageContain.astro";
import ThemeImage from "./ThemeImage.astro";

interface Props {
  defaultImg?: ImageContainProps,
  mobileImg?: ImageContainProps,
  tabletImg?: ImageContainProps,
  pcImg?: ImageContainProps,
};

const { defaultImg, mobileImg, tabletImg, pcImg } = Astro.props;
---

{
  defaultImg &&
  <ThemeImage imgProps={defaultImg}  />
}

{
  mobileImg &&  
  <ThemeImage imgProps={mobileImg} />
}

{
  tabletImg &&  
  <ThemeImage imgProps={tabletImg} />
}

{
  pcImg &&  
  <ThemeImage imgProps={pcImg} />
}
