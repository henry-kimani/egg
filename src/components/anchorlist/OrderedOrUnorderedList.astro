---
/* Render a list of styled anchor tags */

import Anchor from "./Anchor.astro";
import AnchorLiElement from "./AnchorLiElement.astro";

interface Props {
  anchors: {
    name: string;
    href: string;
  }[];
  class?: string;
};

const { anchors, class: className } = Astro.props;
---
<ul class:list={[className]}>
  {anchors.map(({ name, href })=> (
    <AnchorLiElement>
      <Anchor {name} {href} />
    </AnchorLiElement>
  ))}
</ul>
