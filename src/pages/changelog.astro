---
import FormattedDate from "@/components/FormattedDate.astro";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import { getCollection, render } from "astro:content";
import VersionList from "@/components/versionBody/VersionList.astro";
import CustomSplashPage from "@/layouts/CustomSplashPage.astro";

const changelogs = await getCollection("changelogs");

// Sort the post from the latest to the olders
changelogs.sort((a, b) => +b.data.date - +a.data.date);
---

<CustomSplashPage title="Changelog" template="splash" >
  <VersionList entries={changelogs} />
</CustomSplashPage>
