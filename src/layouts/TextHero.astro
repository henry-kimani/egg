---
import type { StarlightIcon } from '@astrojs/starlight/types';
import LinkButton from 'node_modules/@astrojs/starlight/user-components/LinkButton.astro';

interface Props {
  buttonText: string;
  href: string | URL;
  icon?: StarlightIcon;
  variant?: "primary" | "secondary" | "minimal";
}

const { buttonText, href, icon, variant } = Astro.props;

---

<section class="flex flex-col h-96 !mt-20 md:!mt-32">
  <div class="basis-5/6 md:px-10 grid place-items-center"> 
    <h1 class="text-center">
      <slot />
    </h1>
  </div>

  <div class="basis-1/6 grid place-items-center">
    <LinkButton
      {href} {icon} {variant}
    >
      { buttonText }
    </LinkButton>
  </div>
 </section>

<style>
h1 {
  font-size: clamp( var(--sl-text-5xl), calc(1rem + 5vw), var(--sl-text-6xl)) !important;
  font-weight: 700 !important;
}
</style>
