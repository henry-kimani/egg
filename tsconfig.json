{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "./spec/custom-matcher.d.ts"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@firebase/*": [
        "./firebase/*"
      ],
      "@scripts/*": [
        "./src/scripts/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ]
    }
  }
}
